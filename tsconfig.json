{
	"compileOnSave": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "es6",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ]
}
