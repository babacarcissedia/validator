{
  "compileOnSave": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "./typings",
    "lib": [ "ES2020" ],
    "downlevelIteration": true
  },

  "include": [
    "src/**/*"
  ]
}
